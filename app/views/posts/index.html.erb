<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <% user = User.find_by(id: post.user_id) %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= user.image %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(user.name, "/users/#{user.id}") %>
          </div>
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
